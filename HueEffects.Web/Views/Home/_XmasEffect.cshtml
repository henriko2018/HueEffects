@model EffectsConfig

<h2 class="display-4">Jul</h2>
<form method="post" asp-action="UseXmasEffect">
    <div class="form-group">
        <div class="custom-control custom-switch">
            <input asp-for="XmasEffectConfig.Active" type="checkbox" disabled class="custom-control-input">
            <label class="custom-control-label" asp-for="XmasEffectConfig.Active">@(Model.XmasEffectConfig.Active ? "Aktiv" : "Inaktiv")</label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="XmasEffectConfig.LightGroup">Grupp</label>
        <select asp-for="XmasEffectConfig.LightGroup" asp-items="Model.LightGroups.Select(lg => new SelectListItem(lg.Name, lg.Id))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="XmasEffectConfig.CycleLength">Cykellängd (sekunder)</label>
        <input asp-for="XmasEffectConfig.CycleLength" type="number" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Aktivera</button>
</form>